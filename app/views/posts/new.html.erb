<div class="content container">
  <h1>Create a post:</h1>
  <%= simple_form_for(@post, html: {class: "form-vertical"}) do |form| %>
    <%= form.input  :title %>
    <%= form.input  :body %>
    <%= form.input  :tag_list, value: form.object.tag_list.to_s %>
    <%= form.button :submit %>
  <% end %>

  <small> <%= link_to "Cancel", root_path %></small>
</div>
